@{
    Layout = "Office_User_Dashboard_Layout";
}
<html>
<head>
    <style>
        body {
            background-image: url('images/graphic side.svg');
            background-repeat: no-repeat;
            background-size: 100% auto;
        }

        .my-card {
            position: absolute;
            left: 40%;
            top: -20px;
            border-radius: 50%;
        }

        .card {
            transition: all 0.2s ease;
            cursor: pointer;
        }

            .card:hover {
                box-shadow: 5px 6px 6px 2px #e9ecef;
                transform: scale(1.1);
            }
    </style>
</head>
<body>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
    <div class="row pt-2 ">
        <div class="row mx-auto w-100">
            <div class="col-md-3 ">
                <a asp-area="" asp-controller="OfficeUDuser" asp-action="Index" class="text-decoration-none text-black">
                    <div class="card shadow border-0 mx-sm-1 p-3">
                        <div class="text-center mt-2"><h4>Users</h4></div>
                        <div class="text-center mt-2"><h1>@ViewBag.CountOfUsers</h1></div>
                    </div>
                </a>
            </div> 
            <div class="col-md-3">
                <a asp-area="" asp-controller="OfficeUDcomplains" asp-action="Index" class="text-decoration-none text-black">
                    <div class="card shadow border-0 mx-sm-1 p-3">
                        <div class=" text-center mt-2"><h4>Complains</h4></div>
                        <div class="text-center mt-2"><h1>@ViewBag.countOfComplaines</h1></div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a asp-area="" asp-controller="OfficeUDcalls" asp-action="Index" class="text-decoration-none text-black">
                    <div class="card shadow border-0 mx-sm-1 p-3">
                        <div class="text-center mt-2"><h4>Calls</h4></div>
                        <div class="text-center mt-2"><h1>10</h1></div>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a asp-area="" asp-controller="OfficeUDmessages" asp-action="Index" class="text-decoration-none text-black">
                    <div class="card shadow border-0 mx-sm-1 p-3">
                        <div class=" text-center mt-2"><h4>Messages</h4></div>
                        <div class=" text-center mt-2"><h1>5</h1></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <br />
    <h5 class="text-center">Contacted Users</h5>
    <hr />
    <div class="row container-fluid justify-content-center text-center">
        <div class="col table-responsive">
            <table class="table  table-hover mx-auto w-auto">
                <thead>
                    <tr>
                        <th scope="col">User Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">Email</th>
                        <th scope="col">Passport Number</th>
                        <th scope="col">Phone Number</th>
                        <th colspan="2" scope="col">Last Located Place</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usr in ViewBag.Users)
                    {
                        <tr>
                            <th scope="row">@usr.users_name</th>
                            <td>@usr.users_address</td>
                            <td>@usr.users_email</td>
                            <td>@usr.users_passport_number</td>
                            <td>@usr.users_contact_number</td>
                            <td>@usr.users_latitude</td>
                            <td>@usr.users_longitude</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>