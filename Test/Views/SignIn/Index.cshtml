<!DOCTYPE html>
<html>
<head>
    <style>
       header{
           visibility:collapse;
           height:1rem;
       }

        footer {
            visibility: collapse;
        }

        body {
            background-color: #60C8FD;
            background-repeat: no-repeat, repeat;
            opacity:inherit;
           
        }
    </style>
</head>
<body class="container-fluid">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <h6 class="text-black-50 text-center mt-2">Don't have an account?</h6>
    <a asp-area="" asp-controller="SignUp" asp-action="Index"><button class="btn btn-success me-md-2 btn_color container-fluid" type="button">Sign Up</button></a>
    </div>
    <div >
        <section class="vh-100">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="~/images/SignIn.png" class="img-fluid" alt="Sample image">
                    </div>
                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                        <form>
                            <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                                <img src="~/navtitle.png"/>
                                <p class="lead fw-bold mb-0 me-3 p-2">Sign in</p>
                            </div>

                            <div class="divider d-flex align-items-center my-4">
                            </div>

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input type="email" id="form3Example3" class="form-control form-control-lg"
                                       placeholder="Enter a valid email address" />
                                <label class="form-label" for="form3Example3">Email address</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-3">
                                <input type="password" id="form3Example4" class="form-control form-control-lg"
                                       placeholder="Enter password" />
                                <label class="form-label" for="form3Example4">Password</label>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <!-- Checkbox -->
                                <div class="form-check mb-0">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                    <label class="form-check-label" for="form2Example3">
                                        Remember me
                                    </label>
                                </div>
                                <a href="#!" class="text-body text-decoration-none ">Forgot password?</a>
                            </div>

                            <div class="text-center text-lg-start mt-4 pt-2">
                                <a asp-area="" asp-controller="UHome" asp-action="Index">
                                <button type="button" class="btn btn_color text-white btn-lg "
                                        style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                    Sign In
                                </button>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>